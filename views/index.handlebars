<h1>Eat Da Burger!</h1>

<table>
  <tr>
    <td>
      <h2>Burgers on the Menu</h2>
    </td>
    <td>  
      <h2>Burgers that are eaten!</h2>
    </td>
  </tr>
  <tr>
    <td>
      <ul>
        {{#each burgers}}
          {{#unless eaten}}
            {{> burgers/burger-block eaten=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </td>
    <td>
      <ul>
        {{#each burgers}}
          {{#if eaten}}
            {{> burgers/burger-block eaten=false}}
          {{/if}}
        {{/each}}
      </ul>
    </td>
  </tr>
</table>



<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add burger</button>
</form>
